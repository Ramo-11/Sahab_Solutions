<%- include('partials/header') %>

<section class="page-header">
  <div class="container">
    <h1>Contact Us</h1>
    <p>Let's discuss your next project</p>
  </div>
</section>

<section class="contact-section">
  <div class="container">
    <div class="contact-grid">
      <div class="contact-info">
        <h2>Get in Touch</h2>
        <p>Ready to hire us for your next project? Let's make it happen.</p>

        <div class="contact-item">
          <i class="fas fa-envelope"></i>
          <div>
            <h4>Email</h4>
            <p>sahab@sahab-solutions.com</p>
          </div>
        </div>

        <div class="contact-item">
          <i class="fas fa-phone"></i>
          <div>
            <h4>Phone</h4>
            <p>+1 (574)406-4727</p>
          </div>
        </div>
      </div>

      <div class="contact-form">
        <% if (success === 'true') { %>
            <div class="alert-success">Message sent successfully!</div>
        <% } else if (success === 'false') { %>
            <div class="alert-error">
            <% if (typeof error !== 'undefined' && error) { %>
                <%= error %>
            <% } else { %>
                There was an error sending your message. Please try again.
            <% } %>
        </div>
        <% } %>

        <form action="/contact" method="POST" id="contactForm" novalidate>
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" required minlength="2" maxlength="80" autocomplete="name">
          </div>

          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required autocomplete="email">
          </div>

          <div class="form-group">
            <label for="service">Service Interested In</label>
            <select id="service" name="service" required>
              <option value="">Select a service</option>
              <option value="web-development">Website Development</option>
              <option value="app-development">App Development</option>
              <option value="tech-consulting">Technology Consulting</option>
              <option value="other">Other</option>
            </select>
          </div>

          <div class="form-group">
            <label for="message">Message</label>
            <textarea id="message" name="message" rows="5" required minlength="5" maxlength="5000"></textarea>
          </div>

          <!-- Honeypot: present in DOM, off-screen, not enticing to autofill -->
        <div style="position:absolute;left:-9999px;top:auto;width:1px;height:1px;overflow:hidden;">
        <input
            type="text"
            id="contact_extra"
            name="contact_extra"
            tabindex="-1"
            aria-hidden="true"
            autocomplete="new-password"
            inputmode="none"
            placeholder="" />
        </div>

          <!-- (3) Submit-time trap -->
          <input type="hidden" name="ts" value="<%= Date.now() %>">

          <button type="submit" class="btn btn-primary">Send Message</button>
        </form>
      </div>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
